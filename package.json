{
  "name": "text-editor-app",
  "private": true,
  "version": "0.0.0",
  "description": "Cosmic Text Editor - A modern code editor with plugin support",
  "author": {
    "name": "Như Tâm",
    "email": "nhutam050@gmail.com"
  },
  "main": "dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "cross-env ELECTRON=true vite build",
    "build-electron": "tsc --project tsconfig.electron.json && copy preload.js dist\\preload.js",
    "electron": "npm run build-electron && electron .",
    "electron-dev": "cross-env ELECTRON=true concurrently \"npm run dev\" \"node electron-dev.js\"",
    "dist": "npm run build && npm run build-electron && electron-builder",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build && npm run build-electron",
    "dev-full": "npm run rebuild && npm run electron-dev"
  },
  "build": {
    "appId": "com.cosmic.texteditor",
    "productName": "Cosmic Text Editor",
    "files": [
      "dist/**/*",
      "preload.js"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico",
      "signingHashAlgorithms": null,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Cosmic Text Editor",
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ]
  },
  "dependencies": {
    "@anvilco/anvil": "^3.3.2",
    "@emotion/styled": "^11.14.0",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-slot": "^1.1.2",
    "@tailwindcss/vite": "^4.0.12",
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dictionary-en": "^4.0.0",
    "dotenv": "^16.5.0",
    "electron-log": "^5.1.1",
    "electron-updater": "^6.2.1",
    "extract-zip": "^2.0.1",
    "firebase": "^11.6.0",
    "framer-motion": "^12.4.7",
    "lucide-react": "^0.477.0",
    "monaco-editor": "^0.52.2",
    "monaco-editor-workers": "^0.45.0",
    "next-themes": "^0.4.4",
    "nspell": "^2.1.5",
    "pdfkit": "^0.16.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-resizable-panels": "^2.1.7",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "text-editor-app": "file:"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/electron": "^1.4.38",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.10",
    "@types/nspell": "^2.1.6",
    "@types/pdfkit": "^0.13.9",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "postcss": "^8.5.3",
    "rimraf": "^5.0.10",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "wait-on": "^8.0.2"
  }
}
